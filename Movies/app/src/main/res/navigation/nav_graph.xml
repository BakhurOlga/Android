<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/popularMovieListFragment">

    <fragment
        android:id="@+id/popularMovieListFragment"
        android:name="com.olg.bakhur.presenter.views.PopularMovieListFragment"
        android:label="PopularMovieListFragment">
        <action
            android:id="@+id/action_popularMovieListFragment_to_nowPlayingMovieListFragment"
            app:destination="@id/nowPlayingMovieListFragment" />
        <action
            android:id="@+id/action_popularMovieListFragment_to_upcomingMovieListFragment"
            app:destination="@id/upcomingMovieListFragment" />
        <action
            android:id="@+id/action_popularMovieListFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/nowPlayingMovieListFragment"
        android:name="com.olg.bakhur.presenter.views.NowPlayingMovieListFragment"
        android:label="NowPlayingMovieListFragment" >
        <action
            android:id="@+id/action_nowPlayingMovieListFragment_to_popularMovieListFragment"
            app:destination="@id/popularMovieListFragment" />
        <action
            android:id="@+id/action_nowPlayingMovieListFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/upcomingMovieListFragment"
        android:name="com.olg.bakhur.presenter.views.UpcomingMovieListFragment"
        android:label="UpcomingMovieListFragment" >
        <action
            android:id="@+id/action_upcomingMovieListFragment_to_popularMovieListFragment"
            app:destination="@id/popularMovieListFragment" />
        <action
            android:id="@+id/action_upcomingMovieListFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.olg.bakhur.presenter.views.MovieDetailsFragment"
        android:label="MovieDetailsFragment" >
    </fragment>
</navigation>